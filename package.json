{
  "name": "michaeldrotar.com",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Michael <michaeldrotar@gmail.com>",
  "private": true,
  "scripts": {
    "build-client": "vue-cli-service build",
    "build-server": "webpack --config server.config.js",
    "build": "npm run build-client && npm run build-server",
    "check-updates": "npm-check-updates",
    "clean": "rm -fR dist && rm -f server.js",
    "lint": "vue-cli-service lint",
    "serve-client": "vue-cli-service serve --port 8080",
    "serve": "npm run build-server && concurrently --kill-others \"npm run build-server -- --watch\" \"nodemon server.js --watch server.js\" \"npm run serve-client\"",
    "start": "node server.js",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "update": "npm-check-updates -a && npm install",
    "heroku-postbuild": "npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "engines": {
    "node": "8.11.x",
    "npm": "6.1.x"
  },
  "dependencies": {
    "babylonjs": "^3.3.0",
    "koa": "^2.6.2",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.11",
    "normalize.css": "^8.0.1",
    "pluralize": "^7.0.0",
    "socket.io": "^2.2.0",
    "vue": "^2.5.21",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-e2e-cypress": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-plugin-unit-mocha": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "favicons-webpack-plugin": "0.0.9",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-check-updates": "^2.15.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
