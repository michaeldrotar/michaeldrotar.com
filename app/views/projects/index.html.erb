<% content_for(:title) do 'Projects' end %>
<h1 class="h1">Projects</h1>
<p class="lead">Check out my latest projects</p>
<div class="grid-2-sm">
  <% @projects.each do |project| %>
    <div>
      <a href="<%= static_section_path(section: 'projects', page: project.friendly_id) %>" class="screen">
        <h2 class="screen-title"><%= project.name %></h2>
        <div class="preview">
          <div class="preview-content">
            <img src="<%= image_path("screenshots/#{project.friendly_id}/preview") %>" />
          </div>
        </div>
      </a>
    </div>
  <% end %>
</div>
