<% content_for(:title) do %><%= t('.title') %><% end %>
<p><%= t('.description') %></p>
<table class="pageboy-upgrades">
  <thead>
    <tr>
      <th>Equipment</th>
      <th>Tradeskill</th>
    </tr>
  </thead>
  <tbody>
    <% @groupings.each do |grouping| %>
      <tr>
        <td>
          <% if grouping[:equipment_set] %>
            <div class="pageboy-upgrade">
              <div class="pageboy-upgrade-name">
                <%= pageboy_equipment_set_name(grouping[:equipment_set]) %>
              </div>
              <div><%= t('.damage_amount', amount: grouping[:equipment_set].damage) %></div>
              <div><%= t('.crit_amount', amount: grouping[:equipment_set].crit) %></div>
              <%= pageboy_resource_costs_display(grouping[:equipment_set].resource_costs) %>
            </div>
          <% end %>
        </td>
        <td>
          <% if grouping[:tradeskill] %>
            <div class="pageboy-upgrade">
              <div><%= t('.bonus_amount', amount: grouping[:tradeskill].bonus) %></div>
              <%= pageboy_resource_costs_display(grouping[:tradeskill].resource_costs) %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
